{
  "name": "holly",
  "version": "0.0.1",
  "description": "A reliable and simple automated testing framework built around playwright and mocha with Jest matchers and snapshots thrown in, running in parallel with a time-travel capable UI",
  "author": "Luke Page",
  "homepage": "",
  "license": "ISC",
  "main": "build/index.js",
  "repository": {
    "type": "git",
    "url": "y"
  },
  "bin": {
    "holly": "./bin/holly"
  },
  "nyc": {
    "include": [
      "build",
      "lib"
    ]
  },
  "scripts": {
    "ci": "run-s ci:build ci:test",
    "ci:build": "run-p lint build",
    "ci:test": "run-s test",
    "test": "run-s test:clean test:passes test:unit test:failures test:snapshots test:open",
    "test:passes": "cross-env HOLLY_INT_TEST=1 nyc --silent bin/holly -c integration/passes/.hollyrc",
    "test:passes:open": "cross-env HOLLY_INT_TEST=1 bin/holly open -c integration/passes/.hollyrc",
    "test:open": "cross-env HOLLY_INT_TEST=1 nyc --silent --no-clean scripts/test-open.js open -c integration/passes/.hollyrc",
    "test:failures": "cross-env FORCE_COLOR=0 HOLLY_INT_TEST=1 nyc --silent --no-clean scripts/test-failures.js -c integration/fails/.hollyrc",
    "test:snapshots": "nyc --silent --no-clean scripts/test-snapshots.js -c integration/snapshots/.hollyrc",
    "test:unit": "nyc --silent --no-clean mocha -r ts-node/register lib/**/*.spec.ts",
    "test:clean": "rimraf screenshots",
    "lint": "run-p prettier:check lint:eslint",
    "lint:eslint": "eslint . --ext=ts,js",
    "prettier:check": "prettier --ignore-path ../../.prettierignore --check **/*.{md,ts,js,json,yml}",
    "prettier:write": "prettier --ignore-path ../../.prettierignore --write **/*.{md,ts,js,json,yml}",
    "build": "tsc -p lib",
    "build:watch": "tsc --watch -p lib"
  },
  "devDependencies": {
    "@types/babel__traverse": "7.0.8",
    "@types/chai": "4.2.9",
    "@types/debug": "4.1.5",
    "@types/glob": "7.1.1",
    "@types/koa": "2.11.1",
    "@types/koa-static": "4.0.1",
    "@types/mkdirp": "1.0.0",
    "@types/mocha": "7.0.1",
    "@types/ms": "0.7.31",
    "@types/node": "13.7.1",
    "@types/prettier": "1.19.0",
    "@types/ws": "7.2.1",
    "@types/yargs": "15.0.3",
    "chai": "4.2.0",
    "diff": "4.0.2",
    "koa": "2.11.0",
    "looks-same": "7.2.2",
    "rimraf": "3.0.2",
    "ts-node": "8.6.2",
    "@typescript-eslint/eslint-plugin": "2.19.2",
    "@typescript-eslint/parser": "2.20.0",
    "cross-env": "7.0.0",
    "eslint": "6.8.0",
    "npm-run-all": "4.1.5",
    "nyc": "15.0.0",
    "prettier": "1.19.1",
    "typescript": "3.7.5"
  },
  "dependencies": {
    "@babel/traverse": "7.8.4",
    "debug": "4.1.1",
    "expect": "25.1.0",
    "glob": "7.1.6",
    "holly-ui": "0.0.1",
    "jest-snapshot": "25.1.0",
    "koa-static": "5.0.0",
    "milliseconds": "1.0.3",
    "mkdirp": "1.0.3",
    "mocha": "7.0.1",
    "playwright": "0.10.0",
    "stack-utils": "2.0.1",
    "ws": "7.2.1",
    "yargs": "15.1.0"
  }
}
